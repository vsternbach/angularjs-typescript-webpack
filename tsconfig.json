{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "sourceMap": false ,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "jspm_packages"
  ]
}